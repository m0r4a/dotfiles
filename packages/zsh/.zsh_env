# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Changing Ollama models location
export OLLAMA_MODELS="$HOME/nvme/ollama_models"

# Export var to make QT apps run in wayland
export QT_SCALE_FACTOR_ROUNDING_POLICY=PassThrough
export QT_ENABLE_HIGHDPI_SCALING=1
export QT_SCALE_FACTOR=1
export QT_QPA_PLATFORM=wayland

# This are the variables for the GTK darkmode 
export GTK_THEME=Adwaita:dark
export GTK2_RC_FILES=/usr/share/themes/Adwaita-dark/gtk-2.0/gtkrc

# Language environment
export LANG=en_US.UTF-8

# Changing the default toml location for Starship
export STARSHIP_CONFIG=~/.config/starship/starship.toml

# Sonarqube
export SONAR_SCANNER_HOME="/opt/sonar-scanner"
export PATH="${SONAR_SCANNER_HOME}/bin:${PATH}"

# Go packages
export PATH="$HOME/go/bin:$PATH"

# Use neovim for manpages
export MANPAGER="less -R --use-color"
