/* Main Config (wallpaper) */

@import "~/.config/rofi/config.rasi"  

/* ---- Configuration ---- */ 
configuration {
  modi: "drun";
}

window {
  width: 60%;
}

/* ---- Imagebox ---- */
imagebox {
  orientation: horizontal;
  children:
    [ "entry", "listbox"];
}


entry {
  expand: false;
  placeholder: "ï€¾ Choose Wallpaper";
}

/* ---- Listview ---- */
listview {
    columns: 3;
    lines: 2;
    cycle: true;
    dynamic: false;
    flow: horizontal;
}

/* ---- Element ---- */
element {
  orientation: vertical;
  padding: 0px;
  spacing: 0px;
  border-radius: 15px;
}

element-icon {
  size: 21%;
}

element-text {
  font: "Fira Code SemiBold 12";
  vertical-align: 0.5;
  horizontal-align: 0.5;
}
